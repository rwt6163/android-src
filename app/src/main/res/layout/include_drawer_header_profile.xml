<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="vertical"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@color/overlay_dark_40"
            android:scaleType="centerCrop"
            android:contentDescription="@string/drawer_header_profile_background"
            android:id="@+id/drawer_header_profile_background"
            android:src="@drawable/image_2"/>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/drawer_header_profile_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/tmp_photo_male_7"
            app:civ_border="true"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/drawer_header_profile_username"
            android:text="@string/drawer_header_profile_username"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/drawer_header_profile_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>
